<p id="notice"><%= notice %></p>

<h1>Horses</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sesso</th>
      <th>Descrizione</th>
      <th>Età</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @horses.each do |horse| %>
      <tr>
        <td><%= horse.nome %></td>
        <td><%= horse.sesso %></td>
        <td><%= horse.descrizione %></td>
        <td><%= horse.età %></td>
        <td><%= link_to 'Show', horse %></td>
        <td><%= link_to 'Edit', edit_horse_path(horse) %></td>
        <td><%= link_to 'Destroy', horse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>




<br>



<div class="d-flex justify-content-center">
<h1>CAVALLI</h1>
</div>


<br>



<div class="container">

<div class="row row-cols-1 row-cols-md-2">

<% @horses.each do |horse| %>

  
    <div class="col mb-4">
      <div class="card">
        <% if horse.cover.attached? %>
          <%= image_tag url_for(horse.cover) %>
        <% end %> 
        <div class="card-body">

          
          <h5 class="text"><%= horse.nome %></h6> 



          <br>

          <h6 class="text"><%= horse.descrizione %></h6>

          <br>


          <div style="padding: 10px"></div>
          <%= link_to 'MOSTRA', horse, class:"btn btn-success w-100" %>
          <div style="padding: 10px"></div>
          <%= link_to 'MODIFICA', edit_horse_path(horse), class:"btn btn-primary w-100" %>
          <div style="padding: 10px"></div>
          <%= link_to 'ELIMINA', horse, method: :delete, data: { confirm: 'SEI SICURO?' }, class:"btn btn-danger w-100" %>
        </div>
      </div>
    </div>


<% end %>


</div>
</div>



<div class="container">

<%= link_to 'NUOVO CAVALLO', new_horse_path, class:"btn btn-primary w-100" %>

<div style="padding: 10px"></div>

</div>


<p id="notice"><%= notice %></p>



<br>



<div class="d-flex justify-content-center">
<h1>UTENTI</h1>
</div>



<br>



<table class="table">
  <thead>
    <tr>
      <th>COGNOME</th>
      <th>NOME</th>
      <th>EMAIL</th>
      <th>NUMERO</th>
      <th>ANNOTAZIONI</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @utentis.each do |utenti| %>
      <tr>
        <td><%= utenti.cognome %></td>
        <td><%= utenti.nome %></td>
        <td><%= utenti.email %></td>
        <td><%= utenti.numero %></td>
        <td><%= utenti.annotazioni %></td>
        <td><%= link_to 'MOSTRA', utenti, class:"btn btn-success w-100" %></td>
        <td><%= link_to 'MODIFICA', edit_utenti_path(utenti), class:"btn btn-primary w-100" %></td>
        <td><%= link_to 'INDIETRO', utenti, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger w-100" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<div class="container">

<%= link_to 'NUOVI UTENTI', new_utenti_path, class:"btn btn-primary w-100" %>

<div style="padding: 10px"></div>

</div>